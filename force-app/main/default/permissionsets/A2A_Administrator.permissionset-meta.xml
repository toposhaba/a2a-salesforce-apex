<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <hasActivationRequired>false</hasActivationRequired>
    <label>A2A Administrator</label>
    <description>Full access to all A2A functionality including configuration and monitoring</description>
    
    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>A2AAgentCardController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>A2ATaskMonitorController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>A2ASendMessageAction</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>A2AServerREST</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    
    <!-- Custom Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>A2A_Task__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>A2A_Log__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <!-- Field Permissions for A2A_Task__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>A2A_Task__c.Task_ID__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>A2A_Task__c.Context_ID__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>A2A_Task__c.Status__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>A2A_Task__c.Artifacts__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>A2A_Task__c.Message_History__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>A2A_Task__c.Metadata__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Field Permissions for A2A_Log__c -->
    <fieldPermissions>
        <editable>false</editable>
        <field>A2A_Log__c.Level__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>A2A_Log__c.Message__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Tab Visibility -->
    <tabSettings>
        <tab>A2A_Task__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>A2A_Log__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
</PermissionSet>