<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>A2A Agent Card</masterLabel>
    <description>Displays information about an A2A agent and provides actions</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage,lightningCommunity__Page">
            <property name="agentUrl" type="String" label="Agent URL" description="The URL of the A2A agent" required="true"/>
            <property name="cardTitle" type="String" label="Card Title" description="Title to display on the card" default="A2A Agent"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>